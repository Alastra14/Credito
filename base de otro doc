export interface CreditoConPagos {
  id: string;
  nombre: string;
  tipo: string;
  montoTotal: number;
  saldoActual: number;
  tasaInteres: number;
  fechaApertura: string;
  fechaCorte: number | null;
  fechaLimitePago: number | null;
  pagoMinimo: number | null;
  cuotaMensual: number;
  plazoMeses: number | null;
  estado: string;
  notas: string | null;
  createdAt: string;
  updatedAt: string;
  pagos: PagoType[];
  documentos: DocumentoType[];
}
 
export interface PagoType {
  id: string;
  creditoId: string;
  monto: number;
  fecha: string;
  mes: number;
  anio: number;
  tipo: string;
  notas: string | null;
  createdAt: string;
}
 
export interface DocumentoType {
  id: string;
  creditoId: string;
  nombre: string;
  tipo: string;
  ruta: string;
  tamanio: number;
  createdAt: string;
}
 
export interface AmortizacionRow {
  mes: number;
  cuota: number;
  interes: number;
  capital: number;
  saldoRestante: number;
}
 
export interface EstrategiaPago {
  nombre: string;
  descripcion: string;
  ordenCreditos: string[];
  mesesTotal: number;
  interesTotal: number;
  costoTotal: number;
  detalles: EstrategiaDetalle[];
}
 
export interface EstrategiaDetalle {
  mes: number;
  pagos: { creditoId: string; monto: number; saldoRestante: number }[];
  totalPagado: number;
}
 
export interface PagoMensualEstado {
  creditoId: string;
  creditoNombre: string;
  creditoTipo: string;
  cuotaMensual: number;
  totalPagado: number;
  estado: "PAGADO" | "PENDIENTE" | "VENCIDO" | "PARCIAL";
}

